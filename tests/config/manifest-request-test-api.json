            }
          },
          "response": {
            "type": "object",
            "properties": {
              "message": {
                "name": "Echo Message",
                "type": "string",
                "description": "Echoed message"
              }
            }
          },
          "errorCodes": ["INVALID_ARGUMENT", "INTERNAL_ERROR"]
        },
        "manifest": {
          "name": "Get Manifest",
          "description": "Returns the complete Manifest",
          "args": {},
          "response": {
            "type": "object",
            "properties": {
              "manifest": {
                "name": "Manifest",
                "type": "object",
                "description": "Complete Manifest object"
              }
            }
          },
          "errorCodes": ["INTERNAL_ERROR"]
