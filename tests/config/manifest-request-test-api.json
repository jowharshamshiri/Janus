{
  "version": "1.0.0",
  "name": "Cross-Platform Test API",
  "description": "Test Manifest for manifest request validation",
  "channels": {
    "test": {
      "name": "Test Channel",
      "description": "Test channel for cross-platform communication",
      "requests": {
        "ping": {
          "name": "Ping",
          "description": "Simple ping request",
          "args": {},
          "response": {
            "type": "object",
            "properties": {
              "pong": {
                "name": "Pong",
                "type": "boolean",
                "description": "Always true"
              },
              "timestamp": {
                "name": "Timestamp",
                "type": "string",
                "description": "Server timestamp"
              }
            }
          },
          "errorCodes": ["INTERNAL_ERROR"]
        },
        "echo": {
          "name": "Echo",
          "description": "Echo back the input",
          "args": {
            "message": {
              "name": "Message",
              "type": "string",
              "description": "Message to echo",
